<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="4dp">

    <TextView
            android:id="@+id/tv_animal_type"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:textSize="18sp" android:layout_toEndOf="@+id/imgLine" android:layout_toRightOf="@+id/imgLine"
            android:layout_marginLeft="2dp" android:layout_marginStart="2dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="19dp" android:layout_alignParentTop="true"/>

    <TextView
            android:id="@+id/tv_animal_genre"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:padding="1dp" android:layout_toEndOf="@+id/imgLine" android:layout_toRightOf="@+id/imgLine"
            android:layout_marginLeft="1dp" android:layout_marginStart="1dp" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="6dp" android:layout_marginEnd="6dp"
            android:layout_below="@+id/tv_animal_type" android:layout_marginTop="8dp"/>

    <ImageView
            android:id="@+id/imgLine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="1dp"
            android:src="@drawable/cupcake"
            android:contentDescription="Cupcake"/>



</RelativeLayout>



